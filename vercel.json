{
    "version": 2,
    "builds": [
        { "src": "app.py", "use": "@vercel/python" }
    ],
    "routes": [
        { "src": "/ads.txt", "dest": "public/ads.txt" },
        { "src": "/(.*)", "dest": "app.py" },
        {
            "src": "static/style.css",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate"
            }
        }
    ]
}